cmake_minimum_required(VERSION 3.15)
project(basic VERSION 0.5.0 LANGUAGES CXX)
include(GNUInstallDirs)

# Set the C++ version required
set(CMAKE_CXX_STANDARD 20)
set(CMAKE_CXX_STANDARD_REQUIRED ON)

add_subdirectory(src)

# Compile everything with most warnings
add_compile_options("-Wall" "-Wpedantic" "-Wextra")

add_executable(Basic main.cpp)
# target_include_directories(Basic PUBLIC /usr/local/include/vrtgen)
target_link_libraries(Basic PUBLIC src) 
target_include_directories(Basic PUBLIC
                           "${CMAKE_CURRENT_BINARY_DIR}"
                           "${CMAKE_CURRENT_SOURCE_DIR}/include"
                           )